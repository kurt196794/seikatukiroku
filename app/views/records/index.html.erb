<%= render partial: 'kaitekikun'%>

 <% if user_signed_in? %>

  <div class="logout">
  <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout_button" %>
</div>
 <%end%>

<div class="greeting">
こんにちは 
 <% if user_signed_in? %>
      <%= link_to current_user.name, class: "user-nickname"  %>
  さん。
    <%= link_to "申し送りを確認しましょう", "/users/#{current_user.id}" %>
  <div class="touroku">
    <%= link_to '入居者登録', new_record_path, class: "index_mousiokuri" %>
  </div>
      <% else %>
            <%= link_to "ログイン", user_session_path, class: "post" %>
            <%= link_to "新規登録", new_user_registration_path, class: "post" %>
    <%end%>
</div>

<table>
	<tbody>
		<tr class="input_item">
			<td>入居者様</td>
			<td>食事</td>
			<td>水分</td>
			<td>排泄</td>
			<td>体温</td>
			<td>入浴</td>
			<td>夜間</td>
			<td>日常</td>
			<td>アクシデント</td>
		</tr>
		<tr>
    <% @records.each do |record| %>
			<td> 
      <span class="roomNo"><%= record.room %>号室</span>
      <span class="name"><%= record.name %>   様</span>
      <% if user_signed_in? %>
      <%= link_to "編集", edit_record_path(record.id), method: :get, class: "edit" %>
      <%end%>
      </td>
			<td>
      朝|<%= record.mealasa.name%><br>
      昼|<%= record.mealhiru.name%><br>
      夕|<%= record.mealyuu.name%><br>
      </td>
			<td>
      朝|<%= record.hydrationasa%><br>
      昼|<%= record.hydrationhiru%><br>
      夕|<%= record.hydrationyuu%><br>
      </td>
			<td>
      朝|<%= record.excretionasa.name%><br>
      昼|<%= record.excretionhiru.name%><br>
      夕|<%= record.excretionyuu.name%>
      </td>
			<td>
      朝|<%= record.vitalasa%><br>
      昼|<%= record.vitalhiru%><br>
      夕|<%= record.vitalyuu%>
      </td>
			<td class="center"><%=record.bathe.name%>
      </td>
			<td class="center"><%=record.nightrecord.name%>
      </td>
			<td><%=record.diary%>
      </td>
			<td><%=record.nightdiary%>
      </td>
		</tr><%record.accident%>
    <%end%>
	